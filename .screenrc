#Scroll Back buffer size
defscrollback 10000


#Turnoff status message
startup_message off


#Shell
shell -$SHELL


#Charset
utf8 on


#Mouse Tracking
mousetrack on


#Enable Visual Bell
vbell on


#Color fix
defbce on
term xterm-256color


#Shell title
shelltitle "$ |bash"


#Caption
caption always '%?%F%{= mW}%:%{= Kk}%?%2n%f%07=%t%='


#Hardstatus
hardstatus alwayslastline "%{b kw}$USER@%H[$LANG]%{r}%1`%{w} | %{g}%c:%s%{w} | %{y}%D %d %M %Y%{w} | %{g}%l %{w}| %{-b kw}%u %-Lw%{= rW}%50>%n%f %t %{-}%+Lw%<"


